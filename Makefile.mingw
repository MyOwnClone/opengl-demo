HOST    = x86_64-w64-mingw32
CFLAGS  = -std=c99 -Wall -pedantic -Os \
  -DGLEW_STATIC -DGLEW_NO_GLU -Iglew/ \
  -Ifreeglut/include/ -DFREEGLUT_STATIC
LDFLAGS = -mwindows -Lfreeglut/lib/x64/
LDLIBS  = -lfreeglut_static -lwinmm -lopengl32
CC      = $(HOST)-gcc

main.exe : main.o glew/glew.o
	$(CC) $(CFLAGS) $(LDFLAGS) -o $@ $^ $(LDLIBS)

clean :
	$(RM) main.o glew/glew.o main main.exe
